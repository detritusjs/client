{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": true,
    "target": "esnext"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "name": "Detritus Client",
    "out": "./docs",
    "entryPoints": [
      "./src"
    ]
  }
}
